<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="space.forasoft.ui.main.AlbumsFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_albumDetail"
            app:destination="@id/albumDetail" />
    </fragment>
    <fragment
        android:id="@+id/albumDetail"
        android:name="space.forasoft.ui.detail.AlbumDetail"
        android:label="album_detail_fragment"
        tools:layout="@layout/album_detail_fragment" />
</navigation>